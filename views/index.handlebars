  <br>
<img class= "img" src="/assets/images/Hamburger-PNG-File.png" alt="burger">
<h1>Burgers!</h1>
  <br>
<div class ="container">
   <div class="row">
          <div class="col" >
        <h2>Burgers waiting TO BE DEVOURED</h2>

        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
          
          
          
          
    <div class="col">        
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">    
          <label for="burg">Burger:</label>
          <input type="text" id="burg" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>    
            <input type="radio" name="devoured" value="0" checked>Needs to be Devoured!
              <br>
            <input type="radio" name="devoured" value="1">Devoured!
        </div>

        <button type="submit">Add Burger</button> 
      </form>            
    </div>
             
          
          <div class="col">
            <h2>DEVOURED Burgers</h2>
           <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block devour=false}}
               {{/if}}
             {{/each}}
            </ul>
          </div>

    </div><!--row-->
</div> <!--container--> 



  

       
    





    
           
      
 

    
 


